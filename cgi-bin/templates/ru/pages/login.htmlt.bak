<!DOCTYPE html>
<html lang="en">
  <head>

    <META HTTP-EQUIV="CACHE-CONTROL" CONTENT="NO-CACHE">
    <<template:templates/ru/pages/header.htmlt>>
    <script src="/js/pages/sha512.js"></script>
    <script src="/js/pages/login.js"></script>
    

    <title>Добро пожаловать</title>

    <!-- Custom styles for this template -->
    <link href="/css/pages/login.css" rel="stylesheet">

    <script>
      $(document).ready(function() {
        login_page.Init();
      });
    </script>

  </head>

  <body>

    <div class="container">
    <div class="row">
      
      <div class="col-md-6">
          <h2 class="form-signin-heading">Вход на сайт</h2>
          <label for="inputEmail" class="sr-only">E-mail</label>
          <!-- <div class="input-group">
            <span class="input-group-addon">@</span> -->
              <input type="email" id="signinInputLogin" name="signinInputLogin" value="<<vars:signinInputEmail>>" class="form-control margin_bottom_5" placeholder="e-mail / логин / телефон" autocomplete="username" required autofocus>
            <!-- </div> -->
          <label for="inputPassword" class="sr-only">Пароль</label>
          <input type="password" id="signinInputPassword" name="signinInputPassword" class="form-control" placeholder="Пароль" autocomplete="current-password" required>
          <div class="checkbox">
            <label>
              <input type="checkbox" value="remember-me" id="signinRemember" name="signinRemember" checked> Запомнить
            </label>
            <span class="forgot-pass">
              <a href="/cgi-bin/index.cgi?action=forget_password_page">Забыли пароль</a>
            </span>
          </div>
          <button class="btn btn-lg btn-primary btn-block dynamic_shadow" id="signinSubmit" data-loading-text="Вход...">Вход</button>
      </div>

      <div class="col-md-6" id="registrationForm">

        <!-- <form class="form-signin" id="regForm" action="/cgi-bin/index.cgi" method="post"> -->
          <h2 class="form-signin-heading">Зарегистрироваться</h2>

          <div class="form-group has-feedback "  id="regDivEmail">
            <label for="inputEmail" class="sr-only">E-mail</label>
            <div class="input-group margin_bottom_5">
              <span class="input-group-addon" id="tooltip_reg_email"><i class="fa fa-envelope-o" aria-hidden="true"></i></span>
              <input type="email" id="regInputEmail" name="regEmail" class="form-control" placeholder="Почта" required autofocus  value="<<vars:regEmail>>">
            </div>
            <span id="regSpanEmail" class="glyphicon form-control-feedback" aria-hidden="true"></span>
          </div>

          <<template:templates/ru/pages/create_password_block.htmlt>>

          <div class="center-block margin_bottom_5"><img src="/images/captcha/<<vars:securityFile>>"></div>

          <label for="securityCodeLabel" class="sr-only">Код безопасности</label>
          <input type="text" id="regSecurityCode" name="regSecurityCode" class="form-control margin_bottom_5" placeholder="Код безопасности" required>
          <input type="hidden" name="rand" value="<<vars:rand>>">
          <input type="hidden" id="regEmail_checked" name="regEmail_checked" value="<<vars:regEmail_checked>>">
          <input type="hidden" name="action" value="regNewUser">



          <button class="btn btn-lg btn-primary btn-block dynamic_shadow" id="regSubmit" type="submit" data-loading-text="Регистрация...">Зарегистрироваться</button>
        <!-- </form> -->
      </div>

    </div> <!-- /row       -->
    </div> <!-- /container -->


  <<template:templates/ru/pages/sms_confirmation.htmlt>>
  <<template:templates/ru/pages/footer.htmlt>>

  </body>
</html>